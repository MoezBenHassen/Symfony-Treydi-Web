{% extends 'base.html.twig' %}

{% block body %}
    <h1>List of Reclamations</h1>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for reclamation in list %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.titreReclamation }}</td>
                <td>{{ reclamation.descriptionReclamation }}</td>
                <td>{{ reclamation.dateCreation|date('Y-m-d') }}</td>
                <td>
                    <form action="{{ path('app_reclamationUpdate', {'id': reclamation.id}) }}" method="GET">
                        <input type="hidden" name="_method" value="GET">
                        <input type="submit" value="Update">
                    </form>
                    <form action="{{ path('app_reclamationUserDelete', {'id': reclamation.id}) }}" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                        <input type="submit" value="Delete">
                    </form>
                </td>
            </tr>
        {% endfor %}


        </tbody>
    </table>
{% endblock %}